<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dmk.fh.org">

    <uses-permission android:name="android.permission.INTERNET"></uses-permission>

    <application
        android:name="com.FHApplication"
        android:allowBackup="true"
        android:icon="@drawable/fh_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/fh_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LoginActivity" />
        <activity android:name=".MainActivity" />
        <activity android:name=".SingUpActivity" />
        <activity android:name=".ResetPasswordActivity" />
        <activity android:name=".VerifyActivity" />
        <activity android:name=".ForgotPasswordActivity" />
        <activity android:name=".AddChildActivity" />
        <activity android:name=".ChildListActivity" >
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />

            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
        </activity>
        <activity android:name=".SponsorListActivity" />
        <activity android:name=".AddSponsorActivity" />
    </application>

</manifest>